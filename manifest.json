{
  "manifest_version": 3,
  "name": "Facebook Group Post Assistant",
  "version": "1.0",
  "permissions": ["tabs", "scripting", "storage", "alarms", "notifications"],
  "host_permissions": ["*://www.facebook.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": ["*://www.facebook.com/groups/*"],
    "js": ["content.js"]
  }]
}
